<%- include ../partials/header.ejs %>


<%- include ../partials/main_nav.ejs %>


<!-- Content for the EDIT page -->

<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1><%= title %></h1>

              <!-- Retrieve clicked object data to edit-->
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Business Name"
                    name="name"
                    value="<%= User.name %>" 
                    required>
                
                </div>
                <!-- Retrieve clicked object data to edit-->
                <form class="form" method="POST">
                    <div class="form-group">
                        <label for="emailTextField">Email </label>
                        <input type="text" class="form-control"
                        id="emailTextField"
                        placeholder="Enter Business Email"
                        name="email" 
                        value="<%= User.email %>"
                        required>
                        
                    
                    </div>
                    <!-- Retrieve clicked object data to edit-->
                    <form class="form" method="POST">
                        <div class="form-group">
                            <label for="numberTextField">Number </label>
                            <input type="number" class="form-control"
                            id="numberTextField"
                            placeholder="Enter Business Number"
                            name="number"
                            value="<%= User.number %>"
                             required>
                        
                        </div>
                        <!-- Form buttons: Submit and Cancel-->
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-edit"></i> Submit</button>
                            
                        <a href="/users" class="btn btn-warning">
                            <i class="fas fa-undo"></i> Cancel</a>
                            </form>
                            
                        
            </form>
        </div>
    </div>
</div>
  
  
<%- include ../partials/bottom_nav.ejs %>

